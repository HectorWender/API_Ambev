POST {{HostAddress}}/api/sales
Content-Type: application/json

{
  "saleNumber": "SALE-2024-001",
  "saleDate": "2024-01-20T10:00:00Z",
  "customerId": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
  "customerName": "João da Silva",
  "branchId": "4fa85f64-5717-4562-b3fc-2c963f66afa6",
  "branchName": "Filial São Paulo",
  "items": [
    {
      "productId": "1fa85f64-5717-4562-b3fc-2c963f66afa6",
      "productName": "Cerveja Brahma 600ml",
      "quantity": 5,
      "unitPrice": 10.00
