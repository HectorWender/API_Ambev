Content-Type: application/json

{
  "saleDate": "2024-01-21T10:00:00Z",
  "customerId": "99a85f64-5717-4562-b3fc-2c963f66afa6",
  "customerName": "Maria Oliveira",
  "branchId": "4fa85f64-5717-4562-b3fc-2c963f66afa6",
  "branchName": "Filial Rio de Janeiro",
